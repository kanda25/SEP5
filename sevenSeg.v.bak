module sevenSeg(
  input [3:0] D;
  output [6:0] Q;
);

always * begin
  case(D)
    4'h0: Q = 7'1000000;
    4'h1: Q = 7'1111001;
    4'h2: Q = 7'0100100;
    4'h3: Q = 7'0110000;
    4'h4: Q = 7'0011001;
    4'h5: Q = 7'0010010;
    4'h6: Q = 7'0000010;
    4'h7: Q = 7'1011000;
    4'h8: Q = 7'0000000;
    4'h9: Q = 7'0010000;
    4'hA: Q = 7'0001000;
    4'hB: Q = 7'1100000;
    4'hC: Q = 7'1110010;
    4'hD: Q = 7'1000010;
    4'hE: Q = 7'0110000;
    4'hF: Q = 7'0111000;
    default: Q = 7'b1111111;
end
endmodule